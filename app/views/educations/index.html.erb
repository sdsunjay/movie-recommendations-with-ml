<!-- 'access_level' must be set to 1 or 2 to view this page -->
<h1>Educations</h1>
    <%= link_to 'New Education', new_education_path %>
<% if @educations.any? %>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">City</th>
      <th scope="col">Zipcode</th>
      <th scope="col">Homepage</th>
      <th scope="col">Abbreviation</th>
      <th scope="col">Edit </th>
      <th scope="col">Delete </th>
    </tr>
  </thead>

  <tbody>
    <% @educations.each do |education| %>
      <tr>
        <th scope="row"><%= link_to education.name, education_path(education) %></td>
       <% if education.city.present? %>
        <td><%= link_to education.city.name city_path(education.city_id) %></td>
      <% else %>
        <td></td>
      <% end %>
        <td><%= education.zipcode %></td>
        <td><%= education.homepage %></td>
        <% if education.abbreviation.blank? %>
          <td></td>
        <% else %>
          <td><%= education.abbreviation %></td>
        <% end %>
        <td><%= link_to 'Edit', edit_education_path(education) %></td>
        <td><%= link_to 'Destroy', education, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    <%= pagy_nav_bootstrap(@pagy).html_safe %>

    <% else %>
        <p>There are no universities!</p>
    <% end %>

    <br>
