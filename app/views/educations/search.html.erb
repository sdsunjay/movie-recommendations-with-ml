<h1><%= @education %></h1>
<% if @educations.try(:any?) %>
<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">City</th>
      <th scope="col">Edit </th>
      <th scope="col">Delete </th>
    </tr>
  </thead>

  <tbody>
    <% @educations.each do |education| %>
      <tr>
        <th scope="row"><%= link_to education.name, education_path(education) %></td>
       <% if education.city_id.present? %>
        <td><%= education.city.name %></td>
      <% else %>
        <td></td>
      <% end %>
        <td><%= link_to 'Edit', edit_education_path(education) %></td>
        <td><%= link_to 'Destroy', education, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    <%= pagy_nav_bootstrap(@pagy).html_safe %>
<% else %>
  <article class="single-from-blog">
    <div class="blog-title">
      <h2>No educations available yet</h2>
    </div>
  </article>
<% end %>
