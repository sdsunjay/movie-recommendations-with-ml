<p id="notice"><%= notice %></p>

<h1>States</h1>
<%= link_to 'New State', new_state_path %>

<table>
  <thead>
    <tr>
      <th>Iso</th>
      <th>Name</th>
      <th>Country</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.iso %></td>
        <td><%= link_to state.name, state_path(state) %></td>
        <td><%= link_to state.country.name, country_path(state.country_id) %></td>
        <td><%= link_to 'Edit', edit_state_path(state) %></td>
        <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
