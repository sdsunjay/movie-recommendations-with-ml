<% if movie.poster_path.present? %>
  <div class="col">
    <div class="card">
      <%= link_to movie_path(movie) do %>
      <%= image_tag('http://image.tmdb.org/t/p/w300_and_h450_bestv2/' + movie.poster_path) %>
    <% end %>
    <div class="rating">
      <div class="row">
        <p class="card-text">
          <%= render 'partials/review', movie: movie %>
        </p>
      </div>
    </div>
  </div>
</div>
<% end %>
