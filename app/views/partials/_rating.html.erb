<div class="row">
  <div class="col-sm-10">
    <a href="#" class="tooltip-link" data-original-title="Date" data-toggle="tooltip">
      <i class="fa fa-calendar"></i>
      <%= review.created_at.strftime('%b %e at %l:%M %p' ) %>
    </a>
  </div>
  <div class="col-sm-2">
    <% if review.rating == 5 %>
      <%= fa_icon "thumbs-up" %>
    <% end  %>
    <% if review.rating == 1 %>
      <%= fa_icon "thumbs-down" %>
    <% end  %>
  </div>
</div>
<!-- End row -->
