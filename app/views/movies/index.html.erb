<h1>Movies</h1>
<% if @movies.try(:any?) %>
    <div class="row">
        <%= render 'partials/movies', :movie => @movies %>
    </div>
    <div class="row">
        <%= pagy_nav_compact_bootstrap(@pagy).html_safe %>
    </div>
<% else %>
    <article class="single-from-blog">
        <div class="blog-title">
            <h2>No movies available yet</h2>
        </div>
    </article>
<% end %>
