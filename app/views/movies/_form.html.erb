<%= simple_form_for(@movie) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="form-inputs">
  <%= f.input :title, label: 'Title', error: 'Title is mandatory, please specify one' %>
  <%= f.input :tagline, placeholder: 'The world has enough Superheroes.' %>
  <%= f.association :genres, as: :select, collection: @genres, input_html: { multiple: true }, :label_method => lambda{ |genre| "#{genre.name}"}, label: "Genres:", required: true %>
  <%= f.input :poster_path, placeholder: '/2uNW4WbgBXL25BAbXGLnLqX71Sw.jpg'%>
  <%= f.input :backdrop_path, placeholder: '/VuukZLgaCrho2Ar8Scl9HtV3yD.jpg'%>
  <%= f.input :adult, inline_label: 'Yes, Adult Film' %>
  <%= f.input :release_date, as: :date, html5: true %>
  <%= f.input :overview, placeholder: 'When Eddie Brock acquires the powers of a symbiote, he will have to release his alter-ego \"Venom\" to save his life.' %>

  <%#=   TODO FIX THIS f.input :status, collection: Movie.statuses.map {|k, v| [k.humanize.capitalize, v]} %>

  <%= f.input :status, as: :select, collection: Movie.statuses.keys %>

  <%= f.input :budget, html5: true %>
  <%= f.input :revenue, html5: true %>
  <%= f.input :runtime, html5: true %>
  <%= f.input :position, html5: true %>
  <%= f.input :popularity, html5: true %>
  <%= f.input :vote_count, placeholder:'533', html5: true %>
  <%= f.input :vote_average, html5: true %>

</div>
<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>
