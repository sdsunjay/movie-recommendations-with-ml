<div id="movies-show">

  <h2><%= @movie.title %></h2>
  <div class='row'>
    <div class="col-md-6 col-sm-6 col-xs-6">
      <%= image_tag('https://image.tmdb.org/t/p/w500/'+@movie.poster_path, alt: "#{@movie.title}", class:"card-img-top img-fluid") %>
    </div>
    <!-- end col-sm-6 -->
    <div class="col-md-6 col-sm-6 col-xs-6">
      <div class="card-body-right">
        <h3>Movie Info:
        </h3>
        <ul>
          <% unless @movie.tagline.blank? %>
            <li>
              <strong>Tagline:
              </strong><%= @movie.tagline %></li>
          <% end %>
          <li>
            <strong>Genres:
            </strong>
            <%= @genres.map { |genre| link_to(genre.name, genre_path(genre)) }.join(', ').html_safe %>
          </li>
          <% unless @movie.runtime.blank? %>
            <li>
              <strong>Runtime:
              </strong><%= @movie.runtime %>
              mins</li>
          <% end %>
          <li>
            <strong>Release Date:
            </strong><%= @movie.release_date.strftime('%B %e %Y') %></li>
          <% unless @movie.budget.blank? %>
            <li>
              <strong>Budget:
              </strong><%= @movie.budget %></li>
          <% end %>
          <% unless @movie.revenue.blank? %>
            <li>
              <strong>Revenue:
              </strong><%= @movie.revenue %></li>
          <% end %>
          <% unless @movie.popularity.blank? %>
            <li>
              <strong>Popularity:
              </strong><%= @movie.popularity %></li>
          <% end %>
          <li>
            <strong>Overview:
            </strong><%= @movie.overview %></li>
          <li>&nbsp;</li>
          <li>
            <strong>My Rating:
            </strong>
          </li>
            <div id="movie_<%= @movie.id %>">
            <%= render 'partials/review', movie: @movie %>
            </div>
          </ul>
        </div>
        <!-- closes col-sm-6 -->
      </div>
      <!-- closes movies-show-right -->
    </div>
    <!-- closes row -->
    <div class="clearfix"></div>
    <% if @user.super_admin? %>
      <h3>Admin Functions
      </h3>
      <%= link_to 'Edit', edit_movie_path(@movie), class: "btn btn-default btn-sm" %>
      |
      <%= link_to 'Delete', movie_path(@movie), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure?" } %>
    <% end %>
  </div>
