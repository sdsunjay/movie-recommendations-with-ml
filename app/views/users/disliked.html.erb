
<h1>Disliked Movies</h1>
<% if @dislikes.try(:any?) %>
  <div class="row">
    <%= render 'partials/per_page' %>
  </div>
  <div class="row">
    <div class="card-columns">
      <% @dislikes.each do |review| %>
        <%= render 'partials/movie', movie: review.movie, user_reviews: @user_reviews %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <%= pagy_nav_compact_bootstrap(@pagy_dislikes).html_safe %>
  </div>
<% else %>
  <article class="single-from-blog">
    <div class="blog-title">
      <h2>Please review some movies</h2>
    </div>
  </article>
<% end %>
