        <%= simple_form_for(@user) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="form-inputs">

          <%= f.input :name, placeholder: 'Name', error: 'Name is mandatory, please specify one', html5: true %>
          <%= f.input :email, required: true, placeholder: 'E-mail', html5: true %>
          <%# TODO: Fix gender %>
          <%= f.input :gender, as: :select, collection: [ "Male", "Female", "Other"], html5: true %>
          <%= f.input :education, placeholder: 'Education', html5: true %>
          <%= f.input :birthday, as: :date, html5: true %>
          <%= f.input :hometown, placeholder: 'Hometown', html5: true %>
          <%= f.input :location, placeholder: 'Current Location', html5: true %>
          <%= f.input :link, placeholder: 'Facebook Link', html5: true %>
          </div>
          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
