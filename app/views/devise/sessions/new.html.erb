<title>Sign In %></title>
<div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <h4>So glad you want movie recommendations!</h4>
        <div class="card card-signin my-5">
            <div class="card-body">
                <h5 class="card-title text-center">Sign In</h5>
                <form class="form-signin">
                    <div class='row'>
                        <div class='col-sm-12'>
                            <div class='textcenter'>
                              <%= link_to omniauth_authorize_path(:user, :facebook, intent: 'sign_in'), class: 'btn btn-lg btn-facebook btn-block text-uppercase', 'data-button-type': 'login_with', 'data-size': 'large',  'data-text': 'Login with Facebook'  do %>
                              <% fa_icon "facebook-f", text: "Login with Facebook", right: false %>
                            <% end %>
                            <br/>
                                <p>We use Facebook to keep everyone real. We will never post on your behalf.</p>
                            </div>
                        </div>

                        <div class='col-sm-12' style='padding-top: 50px;'>
                            <p class='textcenter'>By signing in, you agree to the <%= link_to 'Terms of Use', terms_path %> and <%= link_to 'Privacy Policy', privacy_path %>.

                        </div><!-- end col-sm-12-->
                    </div><!-- end .row -->

                    <hr>
                </form>
            </div><!-- end card-body -->
        </div><!-- end card card-signin my-5 -->
        </div><!-- end col-sm-9 col-md-7 col-lg-5 -->
    </div><!-- end .row -->
