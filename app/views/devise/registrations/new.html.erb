<div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <h4>So glad you want Movie Recommendations!</h4>
        <div class="card card-signin my-5">
            <div class="card-body">
                <h5 class="card-title text-center">Sign Up</h5>
                <form class="form-signin">
                    <div class='row'>
                        <div class='col-sm-12'>
                          <div class='textcenter'>
                            <!-- 'data-max-rows': '1', 'data-size': 'large', 'data-button-type': 'login_with', 'data-show-faces': 'false', 'data-auto-logout-link' : 'false', 'data-use-continue-as' : 'true', 'data-text': 'Sign up with Facebook' -->
                            <%= link_to omniauth_authorize_path(:user, :facebook, intent: 'sign_up'), class: 'btn btn-lg  btn-facebook btn-block text-uppercase', 'data-button-type': 'login_with', 'data-size': 'large',  'data-text': 'Sign up with Facebook'  do %>
                              <% fa_icon "facebook-f", text: "Sign up with Facebook", right: false %>
                            <% end %>
                                <br/>
                                <p>We use Facebook to keep everyone real. We will never post on your behalf.</p>
                            </div>
                        </div>

                        <div class='col-sm-12' style='padding-top: 50px;'>
                            <p class='textcenter'>By signing up, you agree to the <%= link_to 'Terms of Use', terms_path %> and <%= link_to 'Privacy Policy', privacy_path %>.
                            <br> Please learn more <%= link_to 'here', about_path %></p>

                        </div><!-- end col-sm-12-->
                    </div><!-- end .row -->

                    <hr>
                    <div class='row'>
                        <div class='col-sm-6 col-xs-12'>
                            <p class='align-modal-p'>Already have an account?</p>
                        </div>
                        <div class='col-sm-6 col-xs-12'>
                              <%= link_to omniauth_authorize_path(:user, :facebook, intent: 'sign_in'), class: 'btn btn-lg btn-facebook btn-block text-uppercase', 'data-button-type': 'login_with', 'data-size': 'large',  'data-text': 'SIGN IN'  do %>
                              <% fa_icon "facebook-f", text: "SIGN IN", right: false %>
                            <% end %>
                        </div>
                    </div><!-- end .row -->
                </form>
            </div><!-- end card-body -->
        </div><!-- end card card-signin my-5 -->
    </div><!-- end col-sm-9 col-md-7 col-lg-5 -->
</div><!-- end .row -->
