<div class="card bg-light">
<article class="card-body mx-auto" style="max-width: 600px;">
	<h4 class="card-title mt-3 text-center">Forgot Your Password</h4>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

	<div class="form-group input-group">
		<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
		 </div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
    </div> <!-- form-group// -->
    <div class="form-group">
        <%= f.submit "Send me password reset instructions", class: 'btn btn-primary btn-block' %>
    </div> <!-- form-group// -->
    <p class="text-center">Have an account? <%= link_to 'Log In', signin_path %></p>
<% end %>
</article>
</div>
